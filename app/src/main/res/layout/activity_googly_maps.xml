        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv1"
        android:padding="10sp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/black"
